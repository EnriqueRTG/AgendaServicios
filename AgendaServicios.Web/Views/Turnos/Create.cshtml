@model AgendaServicios.Web.Models.Turno

@{
    ViewData["Title"] = "Crear Turno";
}

<h1>Nuevo</h1>

<h4>Turno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaTurno" class="control-label"></label>
                <input asp-for="FechaTurno" class="form-control" type="date" />
                <span asp-validation-for="FechaTurno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraTurno" class="control-label"></label>
                <input asp-for="HoraTurno" class="form-control" type="time" />
                <span asp-validation-for="HoraTurno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoTurnoId" class="control-label"></label>
                <select asp-for="EstadoTurnoId" class ="form-control" asp-items="ViewBag.EstadoTurnoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class ="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ServicioId" class="control-label"></label>
                <select asp-for="ServicioId" class ="form-control" asp-items="ViewBag.ServicioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Observacion" class="control-label"></label>
                <input asp-for="Observacion" class="form-control" />
                <span asp-validation-for="Observacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

<div class="my-3 py-3">
    <h4 class="alert-danger fst-italic">No genera nuevos turnos... EN REVISION</h4>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
