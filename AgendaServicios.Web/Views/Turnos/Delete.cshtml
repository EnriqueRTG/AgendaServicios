        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaTurno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaTurno)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HoraTurno)
